name = "{{ PackageName }}"
uuid = "{{ PackageUUID }}"
{%- if Authors | length > 0 %}
{%- if Authors.split(',') | length == 1 %}
authors = ["{{ Authors }}"]
{%- else %}
authors = [
{%- for author in Authors.split(',') %}
{%- if author | length > 0 %}
    "{{ author }}",
{%- endif %}
{%- endfor %}
]
{%- endif %}
{%- endif %}
version = "0.1.0"

[workspace]
projects = ["test"{%- if AddDocs %}, "docs"{% endif -%}]

[compat]
julia = "{{ JuliaMinVersion }}"
